
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutClean.cshtml";
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Ops... </strong> @ViewData["Error"]
    </div>
}

@using (Html.BeginForm("Logar", "User", FormMethod.Post))
{
    @Html.Hidden("id", new { ViewBag.id })
    <div class="Login">
        <div class="Logo">
            <h2>Olá! Digite o suas informações de acesso</h2>
        </div>
        <div class="Forms">
            @Html.Editor("Login", new { htmlAttributes = new { @class = "form-control", @placeholder = "Login", @name = "Login", @Id = "Login", required = "required" } })
            @Html.Password("Password", null, new { @class = "form-control", @placeholder = "Senha", @name = "Password", @id = "Password", required = "required" })
            <input type="submit" value="Entrar" class="form-control btn btn-primary BtnLogin" />
            <p>@Html.ActionLink("Criar Conta", "Create", "User")</p>
        </div>
    </div>
}

